<idea-plugin>
    <id>net.seesharpsoft.intellij.plugins.file-preview</id>
    <name>File Preview</name>
    <vendor url="https://github.com/SeeSharpSoft/intellij-file-preview">
        Martin Sommer
    </vendor>

    <description><![CDATA[
        <b>File Preview</b><br><br>
        <em>This plugin enables a quick file preview on simple selecting files in Project View - similar to the preview in Sublime.</em><br><br>
        <b>Features:</b>
        <ul>
            <li>show preview (open temporary editor) of selected file</li>
            <li>focus editor of selected file if already opened</li>
        </ul>
        <br>
        This plugin is fresh like a mild breeze in summer - please contribute issues, ideas and feedback in <a href="https://github.com/SeeSharpSoft/intellij-file-preview" target="_blank">GitHub</a>.
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <idea-version since-build="172.2273.8" />

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileEditorProvider implementation="net.seesharpsoft.intellij.plugins.filepreview.PreviewEditorProvider" />
        <postStartupActivity implementation="net.seesharpsoft.intellij.plugins.filepreview.PreviewStartupActivity" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
