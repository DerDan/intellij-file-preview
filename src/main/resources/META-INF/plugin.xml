<idea-plugin>
    <id>net.seesharpsoft.intellij.plugins.file-preview</id>
    <name>File Preview</name>
    <vendor url="https://github.com/SeeSharpSoft/intellij-file-preview">
        Martin Sommer
    </vendor>

    <description><![CDATA[
        File Preview & Fast File Open<br>
        <em>This is an early version and meant for private testing only!</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <fileEditorProvider implementation="net.seesharpsoft.intellij.plugins.filepreview.PreviewEditorProvider" />
        <postStartupActivity implementation="net.seesharpsoft.intellij.plugins.filepreview.PreviewStartupActivity" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
